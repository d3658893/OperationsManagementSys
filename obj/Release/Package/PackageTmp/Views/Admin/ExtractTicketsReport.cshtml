@model OperationsManagementSystem.Models.TicketsReportDTO

@{
    ViewBag.Title = "ExtractTicketsReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (ViewBag.ExportError != "")
    {
        <div class="col-md-offset-2 col-md-10 text-danger" style="text-align:center;">
            @ViewBag.ExportError
        </div>
    }
}


<h4>Extract Tickets Report</h4>
<hr />

<div>
    @using (Html.BeginForm("ExtractTicketsReport", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container form-horizontal" style="min-height:400px">
            <div class="row">
                <div class="form-group col-md-6">
                    <label><b>Ticket Type</b></label>
                    @Html.DropDownListFor(m => m.TicketType, ViewBag.TicketTypes as IEnumerable<SelectListItem>,
                        "-- Select Ticket Type --", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label><b>Status</b></label>
                    @Html.DropDownListFor(m => m.TicketStatus, ViewBag.StatusTypes as IEnumerable<SelectListItem>,
                     "-- Select Status --",new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label><b>From Date</b></label>
                    @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                </div>
                <div class="form-group col-md-6">
                    <label><b>To Date</b></label>
                    @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label><b>Team</b></label>
                    @Html.DropDownListFor(m => m.Team, ViewBag.Teams as IEnumerable<SelectListItem>,
                     "-- Select Team --", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label><b>Assigned To</b></label>
                    @Html.DropDownListFor(m => m.AssignedTo, ViewBag.MembersList as IEnumerable<SelectListItem>,
                     "-- Select Team Member --", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Export to Excel" class="btn btn-info" />
                    <input type="reset" value="Reset" class="btn btn-info" />
                </div>
            </div>
        </div>
    }

</div>