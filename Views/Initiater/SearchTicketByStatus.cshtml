@using OperationsManagementSystem.Models
@model LkpStatusType

@{
    ViewBag.Title = "SearchTicketByStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Ajax.BeginForm("SearchTicketByStatus", "Initiater", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "searchTickets" }))
    {
        <div class="container form-horizontal">
            <h3>Search Ticket by Status</h3>
            <hr />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><b>Status</b></label>
                    @Html.DropDownListFor(m => m.Status, ViewBag.StatusTypesList as IEnumerable<SelectListItem>,
           "-- Select Status --", htmlAttributes: new { @class = "form-control", @Required = "required", @id = "combo" })
                </div>
                <div class="form-group col-md-6">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="btnSubmit" value="Search" class="btn btn-info" />
                </div>
            </div>
            <div id="searchTickets">

            </div>
        </div>

    }

</div>
