
<h4>Search Ticket</h4>
<hr />

@using (Ajax.BeginForm("SearchTicket", "Initiater", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "searchTickets" }))
{
<div class="container form-horizontal">
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="button" class="btn btn-info" id="searchTaskStatus" value="Search Ticket by Status" />
        </div>
        <div class="form-group col-md-6">

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label><b>Ticket Number</b></label>
            @Html.Editor("TicketNumber", new { htmlAttributes = new { @class = "form-control", @Required = "required" } })
        </div>
        <div class="form-group col-md-6">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </div>
    <div id="searchTickets">

    </div>
</div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
            $(document).ready(function () {
                $('#searchTaskStatus').click(function () {

                    window.location.href = "/Initiater/SearchTicketByStatus";

                });
            });
</script>

