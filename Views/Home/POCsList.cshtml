@model IEnumerable<OperationsManagementSystem.Models.User>

@{
    ViewBag.Title = "POCsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/customTable.css" rel="stylesheet" />

<h3>Following POC's with respect to teams have OMS access</h3>
<hr />
<div class="table-responsive">
    <table class="table" id="myTable">
        <tr>
            <th>
                Serial #
            </th>
            <th>
                User Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Team Lead
            </th>
            <th>
                Team
            </th>
        </tr>
        @{ 
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamLead)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
           @{ i++; }
            </tr>

        }

    </table>
</div>
